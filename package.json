{
  "name": "digital-menu",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "zod": "^4.0.2",
      "@prisma/client": "^6.15.0",
      "better-auth": "^1.3.28",
      "@polar-sh/better-auth": "^1.1.3",
      "dotenv": "^17.2.2",
      "tsdown": "^0.15.5"
    }
  },
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "db:push": "bun run --filter @digital-menu/db db:push",
    "db:studio": "bun run --filter @digital-menu/db db:studio",
    "db:generate": "bun run --filter @digital-menu/db db:generate",
    "db:migrate": "bun run --filter @digital-menu/db db:migrate",
    "db:start": "bun run --filter @digital-menu/db db:start",
    "db:watch": "bun run --filter @digital-menu/db db:watch",
    "db:stop": "bun run --filter @digital-menu/db db:stop",
    "db:down": "bun run --filter @digital-menu/db db:down"
  },
  "packageManager": "bun@1.3.2",
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "tsdown": "^0.15.5",
    "@types/node": "^22.13.11"
  }
}
